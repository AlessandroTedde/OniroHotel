@model OniroHotel.Models.Users
@{
    ViewBag.Title = "Register";
}
<link rel="stylesheet" href="~/Content/Forms.min.css">

@using (Html.BeginForm("Register", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="custom-form">
        <h2>Registrati</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "col-md-8 custom-label mt-4" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "mt-2 col-md-10 custom-input" } })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger d-block" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Surname, new { @class = "col-md-8 custom-label mt-3" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Surname, new { htmlAttributes = new { @class = "mt-2 col-md-10 custom-input" } })
                @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger d-block" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-8 custom-label mt-3" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "mt-2 col-md-10 custom-input" } })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger d-block" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Telephone, new { @class = "col-md-8 custom-label mt-3" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Telephone, new { htmlAttributes = new { @class = "mt-2 col-md-10 custom-input" } })
                @Html.ValidationMessageFor(m => m.Telephone, "", new { @class = "text-danger d-block" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-8 custom-label mt-3" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "mt-2 col-md-10 custom-input" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger d-block" })
            </div>
        </div>
        @Html.HiddenFor(m => m.UserRole, new { @class = "form-control" })
        @Html.HiddenFor(m => m.Fidelity, new { @class = "form-control" })
        <div class="form-group">
            <div class="col-md-5">
                <button type="submit" class="custom-btn mt-3">Register</button>
            </div>
        </div>
    </div>
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#Telephone').keypress(function (e) {
            if (isNaN(this.value + "" + String.fromCharCode(e.charCode)))
                return false;
        })
            .on("cut copy paste", function (e) {
                e.preventDefault();
            });
    });</script>