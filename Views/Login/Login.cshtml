@model OniroHotel.Models.Users
@{
    ViewBag.Title = "Login";
}
<link rel="stylesheet" href="~/Content/Login.min.css">


    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
<div class="wrapper">
    <div class="custom-form">
        <h2>Login</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-label col-md-8 custom-label mt-4" })
            <div class="col-md-8">
                @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "mt-2 custom-input" } })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-8 custom-label mt-3" })
            <div class="col-md-11">
                @Html.PasswordFor(m => m.Password, new { @class = "custom-input mt-2" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                @if (TempData["Error"] != null)
                {
                    <p class="text-danger">@TempData["Error"]</p>
                }
                <p>Non sei ancora un nostro membro? @Html.ActionLink("Registrati", "Register", "Login", new { @class = "mt-2" })</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                <button type="submit" class="custom-btn mt-3">Login</button>
            </div>
        </div>
    </div>
</div>
    }
