<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed&family=Roboto:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <title>@ViewBag.Title - Oniro Luxury Boutique Hotel</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
        <nav class="navbar mb-4">
            <div class="container d-flex justify-content-between">
                <a class="nav-link fs-3" data-bs-toggle="offcanvas" href="#menuOffcanvas" role="button" aria-controls="menuOffcanvas">
                    Menu
                </a>
                <div class="offcanvas offcanvas-start" tabindex="-1" id="menuOffcanvas" aria-labelledby="menuOffcanvasLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title fs-2" id="menuOffcanvasLabel">Menu</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <div>
                            @Html.ActionLink("Verifica Disponibilità", "Index", "Rooms", new { area = "" }, new { @class = "nav-link fs-2 my-4" })
                            @Html.ActionLink("Spa", "Spa", "About", new { area = "" }, new { @class = "nav-link fs-2 mb-4" })
                            @Html.ActionLink("Ristorante", "Restaurant", "About", new { area = "" }, new { @class = "nav-link fs-2 mb-4" })
                            @Html.ActionLink("Chi Siamo", "Info", "About", new { area = "" }, new { @class = "nav-link fs-2 mb-4" })
                            @Html.ActionLink("Contatti", "Contacts", "About", new { area = "" }, new { @class = "nav-link fs-2 mb-4" })
                            @if (Session["UserRole"] != null && Session["UserRole"].ToString() != "HotelGuest")
                            {
                                @Html.ActionLink("Gestione Camere", "GetRooms", "Rooms", new { area = "" }, new { @class = "nav-link fs-2 mb-4" })
                                @Html.ActionLink("Gestione Extra", "Index", "Extras", new { area = "" }, new { @class = "nav-link fs-2 mb-4" })
                                @Html.ActionLink("Gestione Prenotazioni", "Index", "Reservations", new { area = "" }, new { @class = "nav-link fs-2 mb-4" })
                            }
                        </div>
                    </div>
                </div>
                <a href="https://localhost:44330"><img src="https://i.imgur.com/lY96yyc.png" width="140" height="110" /></a>
                <a class="nav-link fs-3" data-bs-toggle="offcanvas" href="#loginOffcanvas" role="button" aria-controls="loginOffcanvas">
                    Login
                </a>
                <div class="offcanvas offcanvas-end" tabindex="-1" id="loginOffcanvas" aria-labelledby="loginOffcanvasLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title fs-2" id="loginOffcanvasLabel">Utente</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <div>
                            @if (Session["LogedUserID"] != null)
                            {
                                @Html.ActionLink("Logout", "Logout", "Login", new { area = "" }, new { @class = "nav-link fs-2 my-4" })
                            }
                            @if (Session["LogedUserID"] == null)
                            {
                            @Html.ActionLink("Login", "Login", "Login", new { area = "" }, new { @class = "nav-link fs-2 my-4" })
                            @Html.ActionLink("Registrati", "Register", "Login", new { area = "" }, new { @class = "nav-link fs-2 mb-4" })
                            }
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    <div class="container body-content pt-0">
        @RenderBody()
        @*<hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Oniro Luxury Boutique Hotel</p>
            </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
