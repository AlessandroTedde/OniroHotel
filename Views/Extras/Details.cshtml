@model OniroHotel.Models.Extras

@{
    ViewBag.Title = "Details";
}
<link rel="stylesheet" href="~/Content/Rooms.min.css">

<div class="custom-form">
<h2 class="text-center">Dettagli</h2>
    <dl class="dl-horizontal">
        <dt class="h4 fw-semibold mb-1">
            @Html.DisplayNameFor(model => model.ExtraName)
        </dt>

        <dd class="fw-semibold fs-5 mb-3">
            @Html.DisplayFor(model => model.ExtraName)
        </dd>

        <dt class="h4 fw-semibold mb-1">
            @Html.DisplayNameFor(model => model.ExtraImg)
        </dt>

        <dd class="fw-semibold fs-5 mb-3">
            @Html.DisplayFor(model => model.ExtraImg)
        </dd>

        <dt class="h4 fw-semibold mb-1">
            @Html.DisplayNameFor(model => model.ExtraPrice)
        </dt>

        <dd class="fw-semibold fs-5 mb-3">
            @Html.DisplayFor(model => model.ExtraPrice)
        </dd>

    </dl>
</div>
<div class="d-flex justify-content-center mt-2 mb-4">
    @Html.ActionLink("Modifica", "Edit", new { id = Model.ExtraID }, new { @class = "link custom-btn me-2 px-2" })
    @Html.ActionLink("Torna alla lista", "Index", null, new { @class = "link custom-btn px-2" })
</div>
